{
    "extends": ["standard", "react"],
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "env": {
        "es6": true
    },
    "rules": {
        "indent": [2, 4],
        "comma-dangle": [2, "always-multiline"],
        "operator-linebreak": [2, "after", { "overrides": { ":": "ignore", "?": "ignore" } }],
        "prefer-reflect": 0,
        "no-nested-ternary": 0,
        "no-use-before-define": 0,
        "no-alert": 0,
        "react/sort-comp": 0,
        "react/no-did-mount-set-state": 0,
        "react/no-did-update-set-state": 0,
        "no-extra-bind": 0
    }
}

